<!doctype html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href='http://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="css/main.css" />
    <title>🍪🍪🍪🍪</title>
  </head>

  <body class="index">
    <div class="header">
      <div class="huge-image" style="background-image: url(images/background.jpg);">

      </div>
    </div>

    <div class="main">
      <ul class="posts">
        {{#each collections.posts}}
          <li class="post">
            <span class="title"><a href="{{basename this.path}}">{{this.title}}</a></span>
            <span class="date">{{this.date}}</span>
          </li>
        {{/each}}
      </ul>
    </div>
  </body>
</html>
